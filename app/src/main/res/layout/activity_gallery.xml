<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gallery">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="820dp"
        android:background="@drawable/bb1" />

    <TextView
        android:layout_width="match_parent"
        android:text=" Mxp Gallery"
        android:textStyle="bold"
        android:textSize="35dp"
        android:id="@+id/title"
        android:layout_marginLeft="100dp"
        android:textColor="#E97164"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/a1" />

    <TextView
        android:layout_width="match_parent"
        android:text="Apharan"
        android:layout_below="@id/image1"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/text2"
        android:textColor="#523831"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/a2" />

    <TextView
        android:layout_width="match_parent"
        android:text="Hello Mini"
        android:layout_below="@id/image2"
        android:textSize="25dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/text3"
        android:textColor="#523831"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:background="@drawable/a3"
        android:layout_below="@id/text2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/image3"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Matsya Kaand"
        android:layout_below="@id/image3"
        android:textSize="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/text4"
        android:textColor="#523831"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/a4" />

    <TextView
        android:layout_width="match_parent"
        android:text="Indoori Ishq"
        android:layout_below="@id/image4"
        android:textSize="25dp"
        android:layout_marginLeft="240dp"
        android:id="@+id/text5"
        android:textColor="#523831"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="176dp"
        android:background="@drawable/cd"
        android:layout_below="@id/text4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/image5"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Campus Diaries"
        android:layout_below="@id/image5"
        android:textSize="25dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/text6"
        android:textColor="#523831"
        android:layout_height="wrap_content"/>

</RelativeLayout>