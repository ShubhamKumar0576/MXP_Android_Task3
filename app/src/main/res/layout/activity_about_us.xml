<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="820dp"
        android:background="@drawable/bb1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E97164"
        android:text="About Us"
        android:layout_marginLeft="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bb1"
            app:cardBackgroundColor="#AAC6F0"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/a7" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="130dp"
                android:textColor="#523831"
                android:text="Name: Karan Bedi      CEO - MX PLayer"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t1"
                android:layout_gravity="right"
                android:layout_marginTop="155dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#815E3F"
                android:text="A successful and passionate businessman, Karan Bedi has made a strong presence in the Indian entertainment industry through his diverse experience in the digital world."
                android:textSize="15sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bb1"
            app:cardBackgroundColor="#AAC6F0"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/s2" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="25dp"
                android:text="Name: Siddharth Mantri    VP - MX Player "
                android:textColor="#523831"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="135dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/t1"
                android:padding="10dp"
                android:text="High impact product leader with an exceptional record creating a differentiated product vision and strategy to deliver innovation, growth and profitability.Take immense pride in craftsmanship and insist on the highest standards."
                android:textColor="#815E3F"
                android:textSize="14sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>



</RelativeLayout>